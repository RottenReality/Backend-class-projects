<div class="jumbotron mx-5">
    <h1 class="alert alert-success">HTML on wire</h1>
    <hr>


    <h2 class="alert alert-primary">Ingreso de Datos</h2>
    <form autocomplete="off" action="/users"  method="POST">
        <!-- Campo nombre -->
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input id="nombre" class="form-control" type="text" name="nombre">
        </div>


        <!-- Campo apellido -->
        <div class="form-group">
            <label for="apellido">Apellido</label>
            <input id="apellido" class="form-control" type="text" name="apellido">
        </div>


        <!-- Campo DNI -->
        <div class="form-group">
            <label for="dni">DNI</label>
            <input id="dni" class="form-control" type="number" name="dni">
        </div>


        <!-- Botón de envío -->
        <button class="btn btn-success mt-3 mb-5" type="submit">Enviar</button>
    </form>
    <br>


    <h2 class="alert alert-primary">Vista de Datos</h2>
    {{#if personas.length}}
        <div class="table-responsive">
            <table class="table table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                </tr>
                {{#each personas}}
                    <tr>
                        <td>{{this.nombre}}</td>
                        <td>{{this.apellido}}</td>
                        <td>{{this.dni}}</td>
                    </tr>
                {{/each}}
            </table>
        </div>
    {{else}}
        <h4 class="alert alert-warning">No se encontraron personas</h4>
    {{/if}}
</div>
<br>

<h2 class="alert alert-primary">Ingreso de Productos</h2>
    <form autocomplete="off" action="/products"  method="POST">
        <!-- Campo title -->
        <div class="form-group">
            <label for="title">Nombre</label>
            <input id="title" class="form-control" type="text" name="title">
        </div>


        <!-- Campo price -->
        <div class="form-group">
            <label for="price">Precio</label>
            <input id="price" class="form-control" type="number" name="price">
        </div>


        <!-- Campo category -->
        <div class="form-group">
            <label for="category">Categoría</label>
            <input id="category" class="form-control" type="text" name="category">
        </div>


        <!-- Botón de envío -->
        <button class="btn btn-success mt-3 mb-5" type="submit">Enviar</button>
    </form>
    <br>

<h2 class="alert alert-primary">Vista de productos</h2>
    {{#if productos.length}}
        <div class="table-responsive">
            <table class="table table-dark">
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Category</th>
                </tr>
                {{#each productos}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.category}}</td>
                    </tr>
                {{/each}}
            </table>
        </div>
    {{else}}
        <h4 class="alert alert-warning">No se encontraron productos</h4>
    {{/if}}
</div>
{{> importScripts}}